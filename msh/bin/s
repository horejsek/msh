#!/usr/bin/python
# -*- coding: UTF-8 -*-

import os
import dialog


MACHINES = [
    'root@machine',
]
CHOICES = [(str(i), machine) for i, machine in enumerate(MACHINES)]


d = dialog.Dialog()
selected_machine = d.menu("Choose machine", height=20, menu_height=20, width=100, choices=CHOICES)

os.system('clear')
if selected_machine[0] == 0:
    cmd = 'ssh %{}'.format(MACHINES[int(selected_machine[1])])
    print(cmd)
    os.system(cmd)
